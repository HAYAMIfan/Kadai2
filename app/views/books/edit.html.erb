<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_message">
    <h2>
      Error prohibited this book from being saved.
    </h2>
    <ul>You must fill out boxes.</ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>

<div class="field">
  <div class="label">Title</div>
  <%= f.text_field :title %>
  </div>
  <div class="field">
    <div class="label">Body</div>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", books_path %>